{
  "compilerOptions": {
    "target": "ES6", // Версия JS для компиляции
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist", // Папка для скомпилированного кода
    "rootDir": "./src", // Папка с исходниками
    "strict": true, // Включение строгого режима TS
    "esModuleInterop": true // Поддержка import/export
  },
  "include": ["src/**/*"] // Какие файлы компилировать
}
